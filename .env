# Variables d'environnement pour l'application Symfony

APP_ENV=dev
APP_SECRET=your_secret_key_here_change_in_production

# Configuration de la base de données
# SQLite (simple pour le développement)
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"

# MySQL
# DATABASE_URL="mysql://user:password@127.0.0.1:3306/api_users?serverVersion=8.0"

# PostgreSQL
# DATABASE_URL="postgresql://user:password@127.0.0.1:5432/api_users?serverVersion=15&charset=utf8"

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=
APP_SHARE_DIR=var/share
###< symfony/framework-bundle ###

###> symfony/routing ###
# Configure how to generate URLs in non-HTTP contexts, such as CLI commands.
# See https://symfony.com/doc/current/routing.html#generating-urls-in-commands
DEFAULT_URI=http://localhost
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Format described at https://www.doctrine-project.org/projects/doctrine-dbal/en/latest/reference/configuration.html#connecting-using-a-url
# IMPORTANT: You MUST configure your server version, either here or in config/packages/doctrine.yaml
#
# SQLite (simple pour le développement)
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
# MySQL (Laragon avec root sans mot de passe)
DATABASE_URL="mysql://root:@127.0.0.1:3306/api_users?serverVersion=8.0.32&charset=utf8mb4"
###< doctrine/doctrine-bundle ###
